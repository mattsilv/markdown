{
  "name": "markdown-to-print-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "check-suspense": "node scripts/check-suspense.js",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "bash -c 'npm run typecheck'",
      "bash -c 'npm run check-suspense'"
    ]
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "dompurify": "^3.2.4",
    "marked": "^15.0.7",
    "next": "15.2.2",
    "pdfmake": "^0.2.18",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "remark-truncate-links": "^1.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.2.2",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^15.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "puppeteer": "^24.4.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
